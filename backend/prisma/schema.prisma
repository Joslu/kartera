generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum CategoryKind {
  EXPENSE
  TRACKING
}

enum PaymentMethodType {
  CASH
  DEBIT
  CREDIT
}

model Month {
  id        String   @id @default(uuid())
  year      Int
  month     Int
  createdAt DateTime @default(now())

  incomes      Income[]
  assignments  BudgetAssignment[]
  transactions Transaction[]

  @@unique([year, month])
  @@index([year, month])
}

model CategoryGroup {
  id        String     @id @default(uuid())
  name      String     @unique
  sortOrder Int        @default(0)

  categories Category[]
}

model Category {
  id        String       @id @default(uuid())
  groupId   String
  name      String
  kind      CategoryKind
  isActive  Boolean      @default(true)
  sortOrder Int          @default(0)

  group        CategoryGroup      @relation(fields: [groupId], references: [id], onDelete: Restrict)
  assignments  BudgetAssignment[]
  transactions Transaction[]
  creditCards  CreditCard[]

  @@unique([groupId, name])
  @@index([groupId])
  @@index([kind])
}

model Income {
  id      String   @id @default(uuid())
  monthId String
  date    DateTime @db.Date
  amount  Decimal  @db.Decimal(12, 2)
  source  String?
  note    String?
  paymentMethodId String?

  month Month @relation(fields: [monthId], references: [id], onDelete: Cascade)
  paymentMethod PaymentMethod? @relation(fields: [paymentMethodId], references: [id], onDelete: SetNull)

  @@index([monthId])
  @@index([date])
  @@index([paymentMethodId])
}

model BudgetAssignment {
  id         String  @id @default(uuid())
  monthId    String
  categoryId String
  amount     Decimal @db.Decimal(12, 2)

  month    Month    @relation(fields: [monthId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  @@unique([monthId, categoryId])
  @@index([categoryId])
}

model Transaction {
  id            String        @id @default(uuid())
  monthId       String
  date          DateTime      @db.Date
  amount        Decimal       @db.Decimal(12, 2)
  categoryId    String
  paymentMethodId String
  description   String
  note          String?
  isReconciled  Boolean       @default(false)
  createdAt     DateTime      @default(now())

  month    Month    @relation(fields: [monthId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  paymentMethod PaymentMethod @relation(fields: [paymentMethodId], references: [id], onDelete: Restrict)

  @@index([monthId])
  @@index([categoryId])
  @@index([date])
  @@index([paymentMethodId])
  @@index([createdAt])
}

model PaymentMethod {
  id        String            @id @default(uuid())
  name      String            @unique
  type      PaymentMethodType
  isActive  Boolean           @default(true)
  sortOrder Int               @default(0)
  createdAt DateTime          @default(now())

  transactions Transaction[]
  incomes     Income[]
  creditCard   CreditCard?
}

model CreditCard {
  id                 String   @id @default(uuid())
  paymentMethodId    String   @unique
  cutoffDay          Int
  dueDay             Int?
  paymentCategoryId  String?
  createdAt          DateTime @default(now())

  paymentMethod  PaymentMethod @relation(fields: [paymentMethodId], references: [id], onDelete: Cascade)
  paymentCategory Category?    @relation(fields: [paymentCategoryId], references: [id], onDelete: SetNull)

  @@index([paymentCategoryId])
}
